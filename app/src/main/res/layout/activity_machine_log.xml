<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Scan"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submit"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtStaffNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thợ"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/txtStaffInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edtMcName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã máy"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/txtMachineInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/txtProcessNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/edtJobNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chi tiết công việc"
            android:layout_marginTop="16dp" />

        <!-- Replacing LinearLayout with GridLayout for 3 columns per row -->
        <GridLayout
            android:id="@+id/layoutProOrdNoResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:layout_marginTop="8dp"
            android:background="@android:color/white" />

        <EditText
            android:id="@+id/edtProOrdNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lệnh sản xuất"
            android:layout_marginTop="16dp" />

        <!-- Serial info result for LSX (ProOrdNo) -->
        <TextView
            android:id="@+id/txtSerialInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edtSerial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số series"
            android:layout_marginTop="16dp" />

        <!-- Only two checkboxes: Rework and Setup, can be checked independently -->
        <LinearLayout
            android:id="@+id/layoutCheckBoxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <CheckBox
                android:id="@+id/chkRework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rework"
                android:layout_marginStart="0dp"/>
            <CheckBox
                android:id="@+id/chkSetup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setup"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- Add 3 small edit boxes for "Đạt", "Phế", "Xử lý" -->
        <LinearLayout
            android:id="@+id/layoutSmallEdits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <EditText
                android:id="@+id/edtDat"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:hint="Đạt"
                android:inputType="number"
                android:maxLength="3"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/edtPhe"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:hint="Phế"
                android:inputType="number"
                android:maxLength="3"
                android:layout_marginStart="16dp"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/edtXuLy"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:hint="Xử lý"
                android:inputType="number"
                android:maxLength="3"
                android:layout_marginStart="16dp"
                android:textAlignment="center"/>
        </LinearLayout>

        <!-- Add TextEdit for "Ghi chú" -->
        <EditText
            android:id="@+id/edtGhiChu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ghi chú"
            android:layout_marginTop="16dp"
            android:inputType="text"/>

    </LinearLayout>
</ScrollView>
