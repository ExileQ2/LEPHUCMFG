<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Hidden test button for debugging - freely positioned -->
    <Button
        android:id="@+id/btnAbTesting"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:text=""
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Version text in bottom left corner -->
    <TextView
        android:id="@+id/txtVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:text=""
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        android:alpha="0.7" />

    <!-- Main Machine Log button - freely positioned and resizable -->
    <Button
        android:id="@+id/btnMachineLog"
        android:layout_width="144dp"
        android:layout_height="86dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Nhật ký máy" />

    <!-- Material Log button - freely positioned and resizable -->
    <Button
        android:id="@+id/btnMaterialLog"
        android:layout_width="144dp"
        android:layout_height="86dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="28dp"
        android:text="NGUYÊN VẬT LIỆU" />

    <!-- Beta label for Material Log button -->
    <TextView
        android:id="@+id/txtMaterialLogBeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnMaterialLog"
        android:layout_alignStart="@id/btnMaterialLog"
        android:layout_alignEnd="@id/btnMaterialLog"
        android:layout_marginTop="4dp"
        android:text="(đang xây dựng)"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:textStyle="italic"
        android:gravity="center" />

    <ScrollView
        android:id="@+id/scrollChangeLog"
        android:layout_width="207dp"
        android:layout_height="129dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="-2dp"
        android:background="@android:drawable/edit_text"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtChangeLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading changelog..."
            android:textColor="@android:color/black"
            android:textSize="11sp" />
    </ScrollView>

    <!-- Example of how to add more freely positioned elements:

    <Button
        android:id="@+id/btnExample1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Center Button" />

    <Button
        android:id="@+id/btnExample2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="Bottom Center" />

    Use these attributes for free positioning:
    - layout_alignParentTop/Bottom/Start/End="true"
    - layout_centerHorizontal/Vertical="true"
    - layout_centerInParent="true"
    - layout_above/below/toStartOf/toEndOf="@id/other_view"
    - layout_marginTop/Bottom/Start/End="XXdp"
    -->

</RelativeLayout>
